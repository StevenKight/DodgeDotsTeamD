<Page
    x:Class="DodgeDots.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:ConnectionId='2' x:Name="canvas" Width="400" Height="400" Background ="Black">

        <TextBlock x:ConnectionId='3' x:Name="startText" TextWrapping="Wrap" Text="Welcome To DodgeDots" Canvas.Top="75" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="32" Width="400" Canvas.ZIndex="2"/>
        <Grid x:ConnectionId='4' x:Name="buttonGrid" Height="400" Width="400">
            <Button x:ConnectionId='5' Content="Start" FontWeight="Bold" FontSize="16" Width="100" Canvas.ZIndex="2"                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:ConnectionId='6' Content="High Scoreboard" FontWeight="Bold" FontSize="16" Width="150" Canvas.ZIndex="2"                          HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center"/>
            <Button x:ConnectionId='7' Content="Reset Scoreboard" FontWeight="Bold" FontSize="16" Width="150" Canvas.ZIndex="2"                           HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Center"/>
        </Grid>

    </Canvas>
</Page>

