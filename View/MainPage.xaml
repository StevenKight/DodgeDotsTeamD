<Page
    x:Class="DodgeDots.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="400" Height="400" Background ="Black">
        <TextBlock x:Name="gameOverTextBlock" TextWrapping="Wrap" Text="GAME OVER" Canvas.Top="160" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="32" Width="400" Canvas.ZIndex="2"/>
        <TextBlock x:Name="countdown" TextWrapping="Wrap" Text="25" Canvas.Top="10" Foreground="Red" FontWeight="Bold" FontFamily="Rockwell Extra Bold" FontSize="22" Height="24" Width="400" FontStyle="Normal" TextAlignment="Right" VerticalAlignment="Center" Canvas.ZIndex="3" HorizontalAlignment="Left"/>


    </Canvas>
</Page>
