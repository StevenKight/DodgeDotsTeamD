<Page
    x:Class="DodgeDots.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="400" Height="400" Background ="Black">

        <TextBlock TextWrapping="Wrap" Text="Welcome to DodgeDots" FontSize="20" Foreground="Red" Canvas.Left="94" Canvas.Top="96" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Start" VerticalAlignment="Top" Canvas.Left="175" Canvas.Top="164" HorizontalAlignment="Center" Click="Start_Click"/>
        <Button Content="High Scoreboard" VerticalAlignment="Top" Canvas.Left="137" Canvas.Top="229" HorizontalAlignment="Center" Click="High_Score_Click"/>
        <Button Content="Reset Scoreboard" VerticalAlignment="Top" Canvas.Left="135" Canvas.Top="295" HorizontalAlignment="Center"/>

    </Canvas>
</Page>
