<Page
    x:Class="DodgeDots.View.HighScorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="400" Height="400" Background ="Black">

        <TextBlock TextWrapping="Wrap" Text="High Scores of DodgeDots" FontSize="20" Foreground="Red" Canvas.Left="94" Canvas.Top="45" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Back" Canvas.Left="94" Canvas.Top="327" VerticalAlignment="Top" Click="backButton_Click"/>
        <Button Content="Reset Scoreboard" Canvas.Left="199" Canvas.Top="327" VerticalAlignment="Top"/>

    </Canvas>
</Page>
