<Page
    x:Class="DodgeDots.View.HighScorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Canvas x:Name="canvas" Width="400" Height="400" Background ="Black">

        <TextBlock x:Name="highScoreboardText" TextWrapping="Wrap" Text="High Score Board" Canvas.Top="15" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="32" Width="400" Canvas.ZIndex="2"/>
        <Grid x:Name="buttonGrid"  Height="400" Width="400">
            <Button Content="Start Menu" FontWeight="Bold" FontSize="16" Width="125" Canvas.ZIndex="2" Click="backButton_Click" Margin="-150,0,0,50" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <Button Content="Reset Scoreboard" FontWeight="Bold" FontSize="16" Width="150" Canvas.ZIndex="2" Margin="150,0,0,50" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        </Grid>

    </Canvas>
</Page>
